{
  "compilerOptions": {
    "types": ["jest", "react-native"],
    "skipLibCheck": true,  // Optional but can help avoid issues with type-checking third-party libraries
    "lib": ["es2017"],
    "target": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true, 
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest.setup.js"
  ]
}